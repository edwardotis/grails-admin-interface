doctype html
html(lang='en')
head
    include includes/head
  body
    include includes/nav

    div.main-container.container
      div.alert.alert-success success!!
      div.alert.alert-danger error
      div.row
        div.col-md-7
          ol.breadcrumb
            li
              a(href="/") Dashboard
            li
              a(href="/attendee.html") Attendee
            li.active
              | Edit: hola

        div.col-md-3.col-md-offset-2.object-nav
          div.btn-group
            a.btn.btn-default(href="add.html")
              span.glyphicon.glyphicon-plus
              |  Add

            a.btn.btn-default(href="attendee.html")
              span.glyphicon.glyphicon-list
              |  Return

      h1 Edit: hola

      form.main-form
        div.form-group
          label(for="input1") Name
          input#input1.form-control(type="text", value="test test")

        div.form-group
          label(for="input2") Last Name
          input#input2.form-control(type="text")

        div.form-group
          label(for="select1") Country
          select#select1.form-control
            option Spain
            option Usa

        .form-options.well
          div.btn-group
            input.btn.btn-primary(type="submit", value="Update")

          div.btn-group
            input.btn.btn-default(type="submit", value="Update and close")

          div.btn-group
            a.btn.btn-danger(href="", data-toggle="modal", data-target="#confirm") Delete

    #confirm.modal.fade(tabindex='-1', role='dialog', aria-labelledby='confirmLabel', aria-hidden='true')
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-hidden='true') Ã—
            h4#confirmLabel.modal-title Confirm deletion
          .modal-body
            | Are you sure you want to delete the selected element?
          .modal-footer
            button.btn.btn-default(type='button', data-dismiss='modal') Close
            button.btn.btn-danger(type='button') Delete


    include includes/footer